{
  "name": "simple-json-table-editor",
  "displayName": "Simple JSON Table Editor",
  "description": "View and edit JSON data as interactive table with inline editing, nested object support, and automatic light/dark theme adaptation",
  "version": "0.0.3",
  "publisher": "LucasYou",
  "repository": {
    "type": "git",
    "url": "https://github.com/curiositycigar/json-table-editor.git"
  },
  "icon": "",
  "engines": {
    "vscode": "^1.106.1"
  },
  "categories": [
    "Visualization",
    "Formatters"
  ],
  "keywords": [
    "json",
    "table",
    "viewer",
    "visualize",
    "data"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "simple-json-table-editor.viewAsTable",
        "title": "View as Table",
        "category": "JSON Table Viewer",
        "icon": "$(table)"
      },
      {
        "command": "simple-json-table-editor.viewSelectionAsTable",
        "title": "View Selection as Table",
        "category": "JSON Table Viewer"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "when": "resourceLangId == json || resourceLangId == jsonc",
          "command": "simple-json-table-editor.viewAsTable",
          "group": "navigation@1"
        },
        {
          "when": "editorHasSelection && (resourceLangId == json || resourceLangId == jsonc)",
          "command": "simple-json-table-editor.viewSelectionAsTable",
          "group": "navigation@2"
        }
      ],
      "editor/title": [
        {
          "when": "resourceLangId == json || resourceLangId == jsonc",
          "command": "simple-json-table-editor.viewAsTable",
          "group": "navigation"
        }
      ],
      "commandPalette": [
        {
          "command": "simple-json-table-editor.viewAsTable",
          "when": "resourceLangId == json || resourceLangId == jsonc"
        },
        {
          "command": "simple-json-table-editor.viewSelectionAsTable",
          "when": "editorHasSelection"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "yarn run package",
    "compile": "yarn run check-types && yarn run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "yarn run check-types && yarn run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "yarn run compile-tests && yarn run compile && yarn run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.106.1",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "typescript-eslint": "^8.46.3",
    "eslint": "^9.39.1",
    "esbuild": "^0.27.0",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.9.3",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2"
  }
}
